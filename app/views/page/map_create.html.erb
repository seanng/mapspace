<div class="container create-map">
  <form>
    <div class="form-group col-xs-10">
      <!-- <label for="mapTitle"></label> -->
      <input type="text" class="form-control" id="mapTitle" placeholder="Title">
    </div>
    <div class="form-group col-xs-2">
      <button type="button" class="btn btn-default add-tags" data-toggle="modal" data-target="#tags-modal">Tags</button>
    </div>
    <div class="form-group">
      <!-- <label for="mapDescription"></label> -->
      <textarea class="form-control" id="mapDescription" placeholder="Description" rows="3"></textarea>
    </div>
    <div id="categoryOption">
      Would you like to have categories?
      </br>
      <button class="btn btn-success yesss" type="button">Yes</button>
      <button class="btn btn-danger nooo" type="button">No</button>
    </div>

    <div id ="all-additions">

    </div>

    <button type="button" class="btn btn-primary add-new-category">Add new category</button>
    <button type="button" class="btn btn-default add-new-place">Add new place</button>
    <label class="featuredornot">
        Would you like this to be featured? &nbsp <input id="featured-checkbox" type="checkbox" checked>
    </label>

    <button class="btn btn-success create-map-button" type="button" data-toggle="modal" data-target="#signin-modal">Create</button>

    </br>

  </form>

  <!-- MODAL -->
  <div class="modal fade" id="tags-modal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Tags</h4>
        </div>
        <div class="modal-body tags-body">

          <form class="mc-tags-form">
            <input type="text" class="form-control mc-tags-input" placeholder="Add tag">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Save</button>
        </div>
      </div>
    </div>
  </div>

</div>