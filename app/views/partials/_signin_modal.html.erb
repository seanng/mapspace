<!-- SIGN IN / SIGN UP MODAL -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

<div class="modal fade" id="signin-modal" tabindex="-1" role="dialog" aria-labelledby="SignIn" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header"> <!-- modal-header -->
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title" id="SignIn">Sign In</h4>
      </div> <!-- /.modal-header -->

      <div class="modal-body"> <!-- modal-body -->
        <form role="form">
          <div class="form-group"> <!-- form-group, email -->
            <div class="input-group">
              <input type="text" class="form-control" id="uLogin" placeholder="Email">
              <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>
            </div>
          </div>
          <div class="form-group"> <!-- form-group, password -->
            <div class="input-group">
              <input type="password" class="form-control" id="uPassword" placeholder="Password">
              <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>
            </div> <!-- /.input-group -->
          </div>
          <div id= "lower-modal-text">
            Don't have an account? <a id="signwhat">Sign up!</a>
          </div> <!-- /.checkbox -->
        </form>
      </div> <!-- /.modal-body -->

      <div class="modal-footer" id="modal-footer-sign-in">
        <button class="form-control btn btn-primary">Sign In</button>
        <div class="progress">
          <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="100" style="width: 0%;">
            <span class="sr-only">progress</span>
          </div>
        </div>
      </div> <!-- /#modal-footer-sign-in-modal -->

    </div>
  </div>
</div> <!-- /#modal-->